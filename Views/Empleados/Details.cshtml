@model SistemaPOS.Models.Empleado

@{
    ViewData["Title"] = "Detalles del Empleado";
    Layout = "_LayoutLogged";
}

<h1><i class="bi bi-info-circle"></i> Detalles del Empleado</h1>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dpi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dpi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cargo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cargo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UsuarioId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioId)
        </dd>
    </dl>
</div>
<div class="d-flex gap-3">
    <a asp-action="Edit" asp-route-id="@Model.EmpleadoId" class="btn btn-sm" style="background-color: #fcc014; color: white;">
        <i class="bi bi-pencil-fill"></i> Editar
    </a>
    <a asp-action="Index" class="btn btn-sm" style="background-color: #855dff; color: white;">
        <i class="bi bi-arrow-left-circle"></i> Volver a la Lista
    </a>
</div>
