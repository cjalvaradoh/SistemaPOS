@model IEnumerable<SistemaPOS.Models.Empleado>

@{
    ViewData["Title"] = "Empleados";
    Layout = "_LayoutLogged";
}

<h1><i class="bi bi-people"></i> Empleados</h1>
<hr />
<p>
    <a asp-action="Create" class="btn btn-sm" style="background-color: #1077d8; color: white;">
        <i class="bi bi-plus-circle"></i> Crear Nuevo
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dpi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cargo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                <td>@Html.DisplayFor(modelItem => item.Dpi)</td>
                <td>@Html.DisplayFor(modelItem => item.Cargo)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EmpleadoId" class="btn btn-sm" style="background-color: #fcc014; color: white;">
                        <i class="bi bi-pencil-fill"></i> Editar
                    </a>
                    <a asp-action="Details" asp-route-id="@item.EmpleadoId" class="btn btn-sm" style="background-color: #128cff; color: white;">
                        <i class="bi bi-info-circle"></i> Detalles
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.EmpleadoId" class="btn btn-sm" style="background-color: #ea2613; color: white;">
                        <i class="bi bi-trash"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
