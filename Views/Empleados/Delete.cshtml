@model SistemaPOS.Models.Empleado

@{
    ViewData["Title"] = "Delete";
    Layout = "_LayoutLogged";
}

<h1>Eliminar Empleado</h1>

<h3>¿Estás seguro de que deseas eliminar este empleado?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dpi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dpi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cargo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cargo)
        </dd>
        
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="EmpleadoId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>
