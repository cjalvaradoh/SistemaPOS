@model SistemaPOS.Models.Producto

@{
    ViewData["Title"] = "Detalles del Producto";
    Layout = "_LayoutLogged";
}

<h1>Detalles del Producto</h1>
<hr />
<dl class="row">
    <dt class="col-sm-2">Código</dt>
    <dd class="col-sm-10">@Model.Codigo</dd>
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>
    <dt class="col-sm-2">Descripción</dt>
    <dd class="col-sm-10">@Model.Descripcion</dd>
    <dt class="col-sm-2">Precio</dt>
    <dd class="col-sm-10">@Model.Precio</dd>
    <dt class="col-sm-2">Stock</dt>
    <dd class="col-sm-10">@Model.Stock</dd>
    <dt class="col-sm-2">Imagen</dt>
    <dd class="col-sm-10">
        <img src="@Model.FotoUrl" alt="Producto" class="img-thumbnail" style="max-width: 250px;" />
    </dd>
</dl>
<a asp-action="Edit" asp-route-id="@Model.ProductoId" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Volver</a>
